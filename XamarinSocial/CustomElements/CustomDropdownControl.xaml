<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XamarinSocial.CustomElements.CustomDropdownControl">

    <ContentView.Content>

        <StackLayout Orientation="Vertical">

            <Label x:Name="titleText"
                   Style="{StaticResource welcomStyle_i21}"/>

            <Frame x:Name="parentLayout"
                   Style="{StaticResource searchUserFrameButton}">

                <Grid>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="4*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Label Grid.Row="0"
                           Grid.Column="0"
                           x:Name="mainText"
                           LineBreakMode="TailTruncation"
                           Style="{StaticResource welcomStyle_i16}"
                           Margin="10,0,0,0"/>

                    <Label Grid.Row="0" 
                           Grid.Column="1"
                           Text="&#xf078;"
                           Style="{StaticResource searchUserDown}"/>
                </Grid>

            </Frame>

        </StackLayout>

    </ContentView.Content>

</ContentView>
    